                                <div class="col-sm-4">
                                    @Html.EnumDropDownListFor(model => model.YourVisitPurpose)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.Profession)</label>
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.Profession, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.ArrivalDate)</label>
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.ArrivalDate, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.DepartureDate)</label>
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.MigrationCardSeries)</label>
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.MigrationCardSeries, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.MigrationCardNumber)</label>
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.MigrationCardNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        
    }



</body>
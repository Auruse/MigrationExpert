@model MigrationExpert.Models.FormN

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <p class="card-description">
                        Персональная информация
                    </p>
                    <button type="submit" class="btn btn-success mr-xl-5">Submit</button>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Фамилия/First Name</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", placeholder = "Фамилия" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Имя Отчество/Middle Last Name</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Имя пробел Отчество" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.Citizenship)</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Citizenship, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.DateOfBirth)</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Пол/Gender</label>
                                <div class="col-sm-9">
                                    @Html.EnumDropDownListFor(model => model.YourGender)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.CountryOfBirth)</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.CountryOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.CityOfBirth)</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.CityOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.PersonalDocumentType)</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.PersonalDocumentType, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.PersonalDocumentSeries)</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.PersonalDocumentSeries, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.PersonalDocumentNumber)</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.PersonalDocumentNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.PersonalDocumentDateOfIssue)</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.PersonalDocumentDateOfIssue, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.PersonalDocumentDateOfExpiration)</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.PersonalDocumentDateOfExpiration, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="card">
                <div class="card-body">
                    <p class="card-description">
                        Вид и реквизиты документа, подтверждающего право на пребывание (проживание) в РФ
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Выбрать/Choose</label>
                                <div class="col-sm-5">
                                    @Html.EnumDropDownListFor(model => model.YourVisa)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.RegDocumentSeries)</label>
                                <div class="col-sm-5">
                                    @Html.EditorFor(model => model.RegDocumentSeries, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.RegDocumentNumber)</label>
                                <div class="col-sm-6">
                                    @Html.EditorFor(model => model.RegDocumentNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.RegDocumentDateOfIssue)</label>
                                <div class="col-sm-4">
                                    @Html.EditorFor(model => model.RegDocumentDateOfIssue, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
